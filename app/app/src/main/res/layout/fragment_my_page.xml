<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 상단 타이틀 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이페이지"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"/>

        <!-- 1. 프로필 카드 영역 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp">

                <!-- 프로필 이미지 (클릭 가능) -->
                <FrameLayout
                    android:id="@+id/layout_profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginBottom="16dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/img_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@android:drawable/sym_def_app_icon"
                            android:scaleType="centerCrop"
                            android:background="#E0E0E0" />
                    </androidx.cardview.widget.CardView>

                    <!-- 카메라 아이콘 -->
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom|end"
                        android:src="@android:drawable/ic_menu_camera"
                        android:background="@drawable/bg_edittext_border"
                        android:backgroundTint="#FFFFFF"
                        android:padding="6dp"
                        android:elevation="4dp"/>
                </FrameLayout>

                <!-- 닉네임 -->
                <TextView
                    android:id="@+id/text_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임 로딩중..."
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp" />

                <!-- 이메일 -->
                <TextView
                    android:id="@+id/text_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@example.com"
                    android:textSize="14sp"
                    android:textColor="#888888" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 2. 메뉴 리스트 (버튼 디자인 개선) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_menu"
            android:elevation="2dp"
            android:paddingVertical="8dp">
            <!-- bg_card_menu가 없다면 하얀색 배경 사용 -->

            <!-- 내 정보 수정 버튼 -->
            <Button
                android:id="@+id/btn_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="내 정보 수정"
                android:textSize="16sp"
                android:textColor="#333333"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical|start"
                android:paddingStart="24dp"
                android:drawableStart="@android:drawable/ic_menu_edit"
                android:drawablePadding="16dp"
                android:drawableTint="#5C6BC0"/>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginHorizontal="24dp"/>

            <!-- 로그아웃 버튼 -->
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="로그아웃"
                android:textSize="16sp"
                android:textColor="#333333"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical|start"
                android:paddingStart="24dp"
                android:drawableStart="@android:drawable/ic_lock_power_off"
                android:drawablePadding="16dp"
                android:drawableTint="#5C6BC0"/>
        </LinearLayout>

        <!-- 3. 회원 탈퇴 버튼 (하단에 작게) -->
        <TextView
            android:id="@+id/btn_delete_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 탈퇴"
            android:textSize="13sp"
            android:textColor="#999999"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>

    </LinearLayout>
</ScrollView>
