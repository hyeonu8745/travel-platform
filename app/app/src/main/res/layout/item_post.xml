<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 1. 게시글 제목 -->
        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="게시글 제목"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="12dp"/>

        <!-- (내용 미리보기 삭제됨) -->

        <!-- 2. 하단 정보 (닉네임 | 날짜 | 조회수 ... 댓글) -->
    <!-- item_post.xml -->

        <!-- 2. 하단 정보 (닉네임 | 날짜 | 조회수 | 댓글수) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 닉네임 -->
            <TextView
                android:id="@+id/item_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="12sp"
                android:textColor="#888888"/>

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:background="#DDDDDD"
                android:layout_marginHorizontal="8dp"/>

            <!-- 날짜 -->
            <TextView
                android:id="@+id/item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025.11.29"
                android:textSize="12sp"
                android:textColor="#888888"/>

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:background="#DDDDDD"
                android:layout_marginHorizontal="8dp"/>

            <!-- 조회수 -->
            <TextView
                android:id="@+id/item_view_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조회 0"
                android:textSize="12sp"
                android:textColor="#888888"/>

            <!-- 빈 공간 채우기 (오른쪽 정렬용) -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <!-- ⭐️ 댓글 수 (회색 말풍선 스타일) -->
            <LinearLayout
                android:id="@+id/layout_comment_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_comment_badge"> <!-- 배경 필요 -->

                <!-- 말풍선 아이콘 -->
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@android:drawable/sym_action_chat"
                    app:tint="#666666"
                    android:layout_marginEnd="4dp"/>

                <!-- 댓글 개수 -->
                <TextView
                    android:id="@+id/item_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#666666"/>
            </LinearLayout>

         </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
